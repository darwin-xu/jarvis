{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "public/js",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
